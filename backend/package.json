{
  "name": "tasktrellis-backend",
  "author": "Oleksandr Kirovych",
  "version": "1.0.0",
  "description": "Backend application for Tasktrellis",
  "license": "MIT",
  "homepage": "https://github.com/OleksandrKirovychDev/Angular-Tasktrellis#readme",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "typeorm": "typeorm-ts-node-commonjs",
    "typeorm:generate": "npx typeorm-ts-node-commonjs migration:generate -d src/database/data-source.ts",
    "typeorm:migrate": "npx typeorm-ts-node-commonjs migration:run -d src/database/data-source.ts",
    "typeorm:revert": "npx typeorm-ts-node-commonjs migration:revert -d src/database/data-source.ts",
    "typeorm:drop": "npx typeorm-ts-node-commonjs schema:drop -d src/database/data-source.ts",
    "dev": "npx nodemon",
    "build": "tsc"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/body-parser": "^1.19.5",
    "@types/express": "^4.17.21",
